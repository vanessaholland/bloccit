<h1>Create a New Advertisement</h1>
<div class="row">
  <%= form_for @advertisement do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter advertisement title" %>
    </div>
    <div class="form-group">
      <%= f.label :copy %>
      <%= f.text_area :copy, rows: 8, class: 'form-control', placehoder: "Enter advertisement body" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, class: 'form-control', placehoder: 100 %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn-success' %>
    </div>
    <% end %>
</div>
